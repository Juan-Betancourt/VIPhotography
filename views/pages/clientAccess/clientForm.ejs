<!DOCTYPE html>
<html>
    <%- include('../../partials/head') %>
    <link rel="stylesheet" href="/styles/clientForm.css">
<body>
    <%- include('../../partials/header') %>
    <%- include('../../partials/nav') %>
    <div id="form-main">
            <h1 id="contacth2">Please enter your credentials</h1>
            <div id="form-div">
              <form class="form" id="form1" action="/client" method="post">
                <p class="name">
                  <input name="lastname" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Last Name" id="name" required/>
                </p>
                <p class="email">
                  <input name="pin" type="password" class="validate[required,custom[email]] feedback-input" id="pin" placeholder="4 Digits PIN" minlength="4" maxlength="4"required/>
                </p>
                <div class="submit">
                  <button type="submit" id="button-blue">SEND</button>
                  <div class="ease"></div>
                </div>
              </form>
            </div>
</body>
</html>
