                <label for="graduation">Graduation<input type="radio" id="graduation" name="eventtype" value="graduation" /></label>
                <label for="poses">Poses<input type="radio" id="poses" name="eventtype" value="poses" /></label>
                <label for="pets">Pets<input type="radio" id="pets" name="eventtype" value="pets" /></label>
                <label for="birthdays">Birthdays<input type="radio" id="birthdays" name="eventtype" value="birthdays" /></label>
                <label for="christmas">Christmas<input type="radio" id="christmas" name="eventtype" value="christmas" /></label>
                <label for="foods">Foods<input type="radio" id="foods" name="eventtype" value="foods" /></label>
                <label for="parties">Parties<input type="radio" id="parties" name="eventtype" value="parties" /></label>
                <label for="landscape">Landscape<input type="radio" id="landscape" name="eventtype" value="landscape" /></label>
            </div>
        </form>
    </div>
