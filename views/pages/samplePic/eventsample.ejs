    <section id="image-container">
        <% if(typeof img === 'object'){ %>
        <div class="grid">
            <% img.forEach(pic => { %>
            <div class="module">
                <!-- <a href="<%= pic.img_url %>" target="_blank"> -->
                <img src="<%= (pic.img_url) %>" ondblclick='window.open("<%= pic.img_url %>?cs=srgb&dl=<<%= pic.eventtype%>>.jpg&fm=jpg")'>
