<!DOCTYPE html>
<html>
<%- include('../../partials/head') %>
<link rel="stylesheet" href="/styles/contactForm.css">

<body>
    <%- include('../../partials/header') %>
    <%- include('../../partials/nav') %>

    <div id="form-main">
        <h2 id="contacth2">Contact J. at VIPhotography:</h2>
        <div id="form-div">
            <form class="form" id="form1" action="mailto:j@viphotography.co" method="post" enctype="text/plain">
                <p class="name">
                    <input name="name" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input"
                        placeholder="Name" id="name" />
                </p>
                <p class="email">
                    <input name="email" type="text" class="validate[required,custom[email]] feedback-input" id="email"
                        placeholder="Email" />
                </p>
                <p class="text">
                    <textarea name="text" class="validate[required,length[6,300]] feedback-input" id="comment"
                        placeholder="Comment"></textarea>
                </p>
                <div class="submit">
                    <!-- <input type="submit" value="SEND" id="button-blue"/> -->
                    <button type="submit" id="button-blue">SEND</button>
                    <div class="ease"></div>
                </div>
            </form>
        </div>
</body>
<%- include('../../partials/footer') %>

</html>